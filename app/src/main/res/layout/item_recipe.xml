<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_icon_image_view"
        android:layout_width="@dimen/recipe_item_icon_size"
        android:layout_height="@dimen/recipe_item_icon_size"
        android:layout_marginHorizontal="@dimen/margin_horizontal_x"
        android:layout_marginVertical="@dimen/margin_vertical_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/recipe_icon"
        android:src="@drawable/baseline_fastfood_24"/>

    <TextView
        android:id="@+id/item_title_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xx"
        android:layout_marginHorizontal="@dimen/margin_horizontal_x"
        android:lines="2"
        tools:text="Pancakes Bien Esponjosos!"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/item_icon_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_icon_image_view"
        app:layout_constraintBottom_toBottomOf="@id/item_icon_image_view"

        />

</androidx.constraintlayout.widget.ConstraintLayout>